<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@drawable/bluegradient"
    tools:context=".ui.home.Result">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061">

        <TextView
            android:id="@+id/yourscorefirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Your Scored"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberscored"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="60dp"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginHorizontal="159dp"
            android:layout_marginVertical="52dp"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalmarks"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="160dp"
            android:layout_marginVertical="60dp"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="200dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/congratulation" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView12"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="21dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView11"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SCORES"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="299dp"
        android:layout_height="255dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView12">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="1."
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp" />
                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp"/>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="2."
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"/>
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp" />
                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="3."
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"/>
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp" />
                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="4."
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"/>
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp" />
                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="5dp"/>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>